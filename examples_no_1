# Convert weight to Lbs and/or Kgs based on user input
'''
Unit = input(print(f"Please Enter units of weight. 'L'' for Lbs and 'K' for KGs"))
if Unit.upper() == 'L':
    Weight_lbs = float(input(print(f"Enter User's weight in 'lbs'")))
    print(f"User's weight is {Weight_lbs} Lbs and {Weight_lbs/2.2} KGs")
if Unit.upper() == 'K':
    Weight_kgs = float(input(print(f"Enter User's weight in 'kgs'")))
    print(f"User's weight is {Weight_kgs} KGs is {Weight_kgs*2.2} lbs")
else:
    print(f"Enter 'K' for KGs and 'L' for lbs")
'''


#Draw a triangle of '*'
'''
i = 1
j = 1
while i <=5 and j == 1:
    print(i * '*')
    i = i + 1
j = j + 1
while i >= 0 and j == 2:
    print(i * '*')
    i = i - 1
print(f"Done")
'''


# Car start/stop program
'''
string = input(f">")
while string != 'quit' and i == 1:
    print(f">")
    if string == 'start':
        print(f"Car started! Ready to go")
        i = 0
    elif string == 'stop':
        print(f"Car stopped!")
        i = 0
    else:
        print(f"I don't understand that!")
        break

else:
    print(f"> End")
'''


#For loop example 1
'''
prices = [10, 20, 30]
total = 0
for price in prices:
    total = price + total
print(total)
'''


# For loop example 2
'''
